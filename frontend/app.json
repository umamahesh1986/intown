{
  "expo": {
    "name": "IntownLocal",
    "slug": "intownlocal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "intownlocal",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "AIzaSyBo3BuGtZ92gvUzyEDIWp4SXVbIxT28LNY"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF6600"
      },
      "edgeToEdgeEnabled": true,
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBo3BuGtZ92gvUzyEDIWp4SXVbIxT28LNY"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow IntownLocal to use your location to find nearby shops."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "fonts": [
      "./assets/fonts/Inter/static/Inter_18pt-Regular.ttf",
      "./assets/fonts/Inter/static/Inter_18pt-Medium.ttf",
      "./assets/fonts/Inter/static/Inter_18pt-SemiBold.ttf",
      "./assets/fonts/Inter/static/Inter_18pt-Bold.ttf"
    ]
  }
}
