{
  "expo": {
    "name": "IntownLocal",
    "slug": "intownlocal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "intownlocal",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vinodreddy.intownlocal",
      "googleServicesFile": "./GoogleService-Info.plist",
      "config": {
        "googleMapsApiKey": "AIzaSyBTPqSDYbyIbJZetJ8Shd_DOqywUJN55AA"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF6600"
      },
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBTPqSDYbyIbJZetJ8Shd_DOqywUJN55AA"
        }
      },
      "package": "com.intown.andriod"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow IntownLocal to use your location to find nearby shops."
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "fonts": [
      "./assets/fonts/Inter/static/Inter_18pt-Regular.ttf",
      "./assets/fonts/Inter/static/Inter_18pt-Medium.ttf",
      "./assets/fonts/Inter/static/Inter_18pt-SemiBold.ttf",
      "./assets/fonts/Inter/static/Inter_18pt-Bold.ttf"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2f515f57-74ba-4b3b-aa12-797ce811fdd6"
      }
    }
  }
}
